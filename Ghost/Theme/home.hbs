<!-- Projects Section -->
<section id="projects" class="projects-section">
    <div class="container">
        <div class="section-header">
            <span class="section-tag">Portfolio</span>
            <h2 class="section-title">Featured Projects</h2>
        </div>
        <div class="projects-grid">
            {{#get "posts" limit="6" filter="tag:projects"}}
                {{#foreach posts}}
                <article class="project-card">
                    <div class="project-image">
                        {{#if feature_image}}
                            <img src="{{feature_image}}" alt="{{title}}">
                        {{else}}
                            <div class="project-placeholder"></div>
                        {{/if}}
                        <div class="project-overlay">
                            <span class="view-project">View Project ‚Üí</span>
                        </div>
                    </div>
                    <div class="project-content">
                        {{#if featured}}
                        <span class="featured-badge">Featured</span>
                        {{/if}}
                        <h3 class="project-title">
                            <a href="{{url}}">{{title}}</a>
                        </h3>
                        <p class="project-excerpt">{{excerpt words="25"}}</p>
                        <div class="project-meta">
                            {{#foreach tags limit="3"}}
                            <span>{{name}}</span>
                            {{/foreach}}
                        </div>
                    </div>
                </article>
                {{/foreach}}
            {{else}}
                <div class="no-projects">
                    <p>Projects coming soon. Create posts with the "project" tag to display them here.</p>
                </div>
            {{/get}}
        </div>
        <div class="view-all">
            <a href="{{@site.url}}/tag/projects" class="btn btn-secondary">View All Projects</a>
        </div>
    </div>
</section>

